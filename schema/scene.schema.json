{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene Schema",
  "type": "object",
  "properties": {
    "objects": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/hittable"
      }
    },
    "camera": {
      "type": "object",
      "properties": {
        "look_from": {
          "$ref": "#/definitions/vector"
        },
        "look_at": {
          "$ref": "#/definitions/vector"
        },
        "vup": {
          "$ref": "#/definitions/vector"
        },
        "vfov": {
          "type": "number"
        },
        "aperture": {
          "type": "number"
        },
        "focus_dist": {
          "type": "number"
        }
      },
      "required": ["look_from", "look_at", "vup", "vfov"]
    }
  },
  "required": ["objects"],
  "definitions": {
    "hittable": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "MovingSphere"
            },
            "center": {
              "$ref": "#/definitions/vector"
            },
            "center2": {
              "$ref": "#/definitions/vector"
            },
            "t0": {
              "type": "number"
            },
            "t1": {
              "type": "number"
            },
            "radius": {
              "type": "number"
            },
            "material": {
              "$ref": "#/definitions/material"
            }
          },
          "required": [
            "name",
            "center",
            "center2",
            "t0",
            "t1",
            "radius",
            "material"
          ],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "Sphere"
            },
            "center": {
              "$ref": "#/definitions/vector"
            },
            "radius": {
              "type": "number"
            },
            "material": {
              "$ref": "#/definitions/material"
            }
          },
          "required": ["name", "center", "radius", "material"],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "BVH"
            },
            "items": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/hittable"
              }
            }
          }
        }
      ]
    },
    "material": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "Metal"
            },
            "albedo": {
              "$ref": "#/definitions/vector"
            },
            "fuzz": {
              "type": "number"
            }
          },
          "required": ["name", "albedo", "fuzz"],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "Lambertian"
            },
            "albedo": {
              "$ref": "#/definitions/vector"
            }
          },
          "required": ["name", "albedo"],
          "additionalProperties": false
        },
        {
          "properties": {
            "name": {
              "type": "string",
              "const": "Dielectric"
            },
            "ref_idx": {
              "type": "number"
            }
          },
          "required": ["name", "ref_idx"],
          "additionalProperties": false
        }
      ]
    },
    "vector": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      },
      "required": ["x", "y", "z"],
      "additionalProperties": false
    }
  }
}
